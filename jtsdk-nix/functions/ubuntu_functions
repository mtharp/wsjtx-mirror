#
# Part of the JTSDK-NIX Project
# Function Library for Ubuntu setup

#------------------------------Ubuntu Functions--------------------------------#

# make base setup_dir is it doesnt not exist
function ubuntu_setup_marker() {

if [[ -d ~/.local/share/applications/jtsdk-nix ]]; then
echo "Setting up JTSDK-NIX configuration folder .."
mkdir -p ~/.local/share/applications/jtsdk-nix
fi

}

# check which version we are using
function ubuntu_distro_info() {

# uname still best way to get arch ?
echo "Getting UBuntu Information"
_ARCH=$(uname -i)
# ubuntu uses lsb_release 
_DISTRIBUTOR=$(lsb_release -i |awk 'FNR==1 {print $3}' |tr [:upper:] [:lower:])
_RELEASE=$(lsb_release -r |awk '{print $2}')

echo "Setting Ubuntu Info Marker"
cat > ~/.local/share/applications/jtsdk-nix/ubuntu.info.mkr <<EOL
$_ARCH
$_DISTRIBUTOR
$_RELEASE
EOL

}

# Ubuntu 64-Bit
function ubuntu_x86_64_list() {
echo
echo "Install WSJT Build Dependencies"
sudo apt-get -s install $(< $_CFG/pkg_list_ubuntu_x86_64)
touch ~/.local/share/applications/jtsdk-nix/x86_64_pkg_install.mkr

}

# Ubuntu 32-Bit
function ubuntu_x86_list() {
echo "Install WSJT Build Dependencies"
sudo apt-get -s install $(< $_CFG/pkg_list_ubuntu_x86)
touch ~/.local/share/applications/jtsdk-nix/x86_pkg_install.mkr

}

